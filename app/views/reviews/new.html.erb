<div class="container">
  <h2>Add a review</h2>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.select :rating, options_for_select(%w[0 1 2 3 4 5]) %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Go back to #{@restaurant.name}", restaurant_path(@restaurant) %>
</div>

