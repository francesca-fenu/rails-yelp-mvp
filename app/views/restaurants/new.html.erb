<div class="container">
  <h2>Add a restaurant</h2>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, collection: Restaurant::CATEGORIES %>
    <%= f.submit "Create Restaurant"%>
  <% end %>
</div>
