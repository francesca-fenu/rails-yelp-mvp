<div class="container">
  <h2>Add a restaurant</h2>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, collection: Restaurant::CATEGORIES %>
    <%= f.submit "Create Restaurant" , class: "btn btn-primary"%>
  <% end %>
  <br>
  <%= link_to "Go back to all restaurants", restaurants_path %>
</div>
